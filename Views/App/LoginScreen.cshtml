@model LoginViewModel
@{
	ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>TigerTix: @ViewData["Title"]</title>
        <style>
            body {
                font-family: Arial, sans-serif;
                text-align: center;
            }
            /* Main Box */
            form {
                margin: 20px auto;
                padding: 20px;
                border: 1px solid #ccc;
                width: 300px;
            }
            /* User and pass text */
            label {
                display: block;
                color: black;
                margin-bottom: 10px;
            }
            /* Input box surrounding */
            input {
                width: 100%;
                padding: 5px;
                border: 1px solid #ccc;
            }
            button {
                padding: 10px 20px;
                background-color: #F56600;
                color: white;
                border: none;
                cursor: pointer;
            }
          /* Login header */
          .header {
            overflow: hidden;
            background-color: #f1f1f1;
            padding: 20px 10px;
          }

          /* Right 3 buttons */
          .header a {
            float: left;
            color: black;
            text-align: center;
            padding: 12px;
            text-decoration: none;
            font-size: 15px;
            line-height: 25px;
            border-radius: 4px;
          }

          /* Left page header */
          .header a.logo {
            font-size: 30px;
            font-weight: bold;
          }

          /* Change the background color on mouse-over */
          .header a:hover {
            background-color: #ddd;
            color: black;
          }

          /* Buy Tickets Button */
          .header a.active {
            background-color: #522D80;
            color: white;
          }

          /* Float the link section to the right */
          .header-right {
            float: right;
          }
        </style>
    </head>
    
    <body>
    	<div class="header">
          <a href="#default" class="logo">Tiger Tix</a>
          <div class="header-right">
              <a class="active" href="#home">Buy Tickets</a>
              <a href="#contact">Contact</a>
              <a href="#about">Account</a>
          </div>
      	</div>
        <h1>Login</h1>
        <form method="post">
            <label>Username:</label>
            <input type="text" name="username"/>
            <br /><br/>
            <label>Password:</label>
            <input type="password" name="password"/>
            <br /><br />
            <button>Login</button>
        </form>
    </body>
</html>
