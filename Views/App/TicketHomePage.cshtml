@model LoginViewModel
@{
    ViewData["Title"] = "TicketPage";
}

<!DOCTYPE html>
<html>
  <head>
      <title>Ticket Listings</title>
      	<style>
          h1 {
              margin: 20px;
          }
          h3 {
              text-align: center;
          }
          body {
              font-family: Arial, sans-serif;
              background-color: #f0f0f0;
          }

          .ticket-list {
              display: flex;
              flex-wrap: wrap;
              justify-content: center;
          }

          .ticket-item {
              width: 300px;
              margin: 20px;
              padding: 20px;
              background-color: #fff;
              box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
              text-align: center;
          }

          .ticket-item img {
              width: 100%;
              height: 200px;
              object-fit: cover;
          }

          .ticket-item h2 {
              margin-top: 10px;
              font-size: 20px;
          }

          .ticket-item p {
              margin-bottom: 10px;
          }

          .ticket-item button {
              padding: 10px 20px;
              background-color: #F56600;
              color: white;
              border: none;
              cursor: pointer;
          }
          /* Clemson tiger football header */
          .header {
            overflow: hidden;
            background-color: #f1f1f1;
            padding: 20px 10px;
          }

          /* Right 3 buttons */
          .header a {
            float: left;
            color: black;
            text-align: center;
            padding: 12px;
            text-decoration: none;
            font-size: 15px;
            line-height: 25px;
            border-radius: 4px;
          }

          /* Left page header */
          .header a.logo {
            font-size: 30px;
            font-weight: bold;
          }

          /* Change the background color on mouse-over */
          .header a:hover {
            background-color: #ddd;
            color: black;
          }

          /* Buy Tickets Button */
          .header a.active {
            background-color: #522D80;
            color: white;
          }

          /* Float the link section to the right */
          .header-right {
            float: right;
          }
      </style>
  </head>

  <body>
      <div class="header">
          <a href="#default" class="logo">Tiger Tix</a>
          <div class="header-right">
              <a class="active" href="#home">Buy Tickets</a>
              <a href="#contact">Contact</a>
              <a href="#about">Account</a>
          </div>
      </div>
      <h3>Clemson Tigers Football</h3>
      <div class="ticket-list">
          <div class="ticket-item">
              <img src="image1.jpg" alt="Event Image">
              <h2>Clemson At Wakeforest</h2>
              <p>Date: October 12, 2024</p>
              <p>Location: Winston-Salem, NC</p>
              <button>Buy Tickets</button>
          </div>
          </div>
      <div class="ticket-list">
          <div class="ticket-item">
              <img src="tigerpaw.png" alt="Event Image">
              <h2>Clemson Vs Virginia</h2>
              <p>Date: October 19, 2024</p>
              <p>Location: Death Valley</p>
              <button>Buy Tickets</button>
          </div>
          </div>
  </body>
</html>